<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.keyRD.system.dao.ApplyDao">
    <resultMap id="BaseResultMap" type="com.hust.keyRD.commons.entities.Apply">
        <!--映射column为数据库字段，property为实体类属性-->
        <id column="id" property="id" jdbcType="INTEGER"/>
        <id column="applier_id" property="applierId" jdbcType="INTEGER"/>
        <id column="apply_remarks" property="applyRemarks" jdbcType="VARCHAR"/>
        <id column="target_user_id" property="targetUserId" jdbcType="INTEGER"/>
        <id column="check_remarks" property="checkRemarks" jdbcType="VARCHAR"/>
        <id column="attributes" property="attributes" jdbcType="VARCHAR"/>
        <id column="apply_time" property="applyTime" jdbcType="DATE"/>
        <id column="result" property="result" jdbcType="INTEGER"/>
        <id column="state" property="state" jdbcType="INTEGER"/>
    </resultMap>
    <!--用户注册-->
    <insert id="save"  parameterType="Apply" useGeneratedKeys="true" keyProperty="id">
        insert into apply(id,applier_id,apply_remarks,target_user_id,check_remarks,attributes,apply_time,result,state) values
        (null,#{applierId},#{applyRemarks},#{targetUserId},#{checkRemarks},#{attributes},#{applyTime},#{result},#{state});
    </insert>
    <!--根据审核人找未处理过的申请列表-->
    <select id="getApplyListFrom" parameterType="Integer" resultMap="BaseResultMap">
        select * from apply where target_user_id=#{userId} order by state asc,apply_time desc;
    </select>
    <!--根据id找申请列表-->
    <select id="findApplyById" parameterType="Integer" resultMap="BaseResultMap">
        select * from apply where id=#{id};
    </select>
    <!--更新属性-->
    <update id="updateResultAndState" parameterType="Apply">
        update apply set check_remarks=#{checkRemarks},result=#{result},state=#{state} where id=#{id};
    </update>
    <!--根据id找申请列表-->
    <select id="getUserAttributesByUserId" parameterType="Integer" resultType="String">
        select attributes from user where id=#{userId};
    </select>
    <!--找该用户的所有申请-->
    <select id="getApplyListTo" parameterType="Integer" resultMap="BaseResultMap">
        select * from apply where applier_id=#{userId} order by apply_time desc;
    </select>
</mapper>